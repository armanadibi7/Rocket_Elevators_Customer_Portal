@addTagHelper *, Vereyon.Web.FlashMessage

<flash dismissable="true" />
<div class="container">
    <section class="callout-dark heading-title" style="z-index: 100; background-color: #1F2739;">
        <div class="container">

            <div class="text-center">
                <h3 class="fs-30" style="color:white">Your Buisness is important to us..</h3>
                <p>Which is why we have designed this interface so you can stay on top of your products with us.</p>
            </div>

        </div>

    </section>

