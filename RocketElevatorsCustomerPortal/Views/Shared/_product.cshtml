<link href="~/css/tableStyle.css" rel="stylesheet" type="text/css" />


<div class="center">
    <h2 style="margin-bottom:-25px;margin-top:10px;">Buildings</h2>
    <table class="container">

        <thead>
            <tr>
                <th><h1>Admin Name</h1></th>
                <th><h1>Admin Email</h1></th>
                <th><h1>Phone Number</h1></th>
                <th><h1>Tech Name</h1></th>
                <th><h1>Tech Email</h1></th>
                <th><h1>Intervention</h1></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var building in ViewBag.building)
            {
                <tr>
                    <td>@building.AdminName</td>
                    <td>@building.AdminEmail</td>
                    <td>@building.AdminPhoneNumer</td>
                    <td>@building.TechFullName</td>
                    <td>@building.TechEmail</td>
                    <td>
                        @Html.ActionLink("Request Intervetnion", "Index", "Intervention", new { product = "building", id = @building.Id }, null)

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
